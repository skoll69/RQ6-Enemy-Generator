# Copy this file to .env and adjust values as needed
# Hint: If you start MySQL without compose using ./run_db_nocompose.sh and it chooses a non-default port (e.g., 3308), update DB_PORT below to match.

# MySQL container/database settings (used by mysql:8 on first run)
MYSQL_DATABASE=mythras_eg
MYSQL_USER=mythras_eg
MYSQL_PASSWORD=mysecret
MYSQL_ROOT_PASSWORD=rootsecret

# Django DB connection settings (used by settings.py)
DB_NAME=mythras_eg
DB_USER=mythras_eg
DB_PASSWORD=mysecret
DB_HOST=127.0.0.1
DB_PORT=3306
# Optional SSL parameters (uncomment and configure if using SSL)
# DB_SSL_CA=/path/to/ca.pem

# Django core settings
SECRET_KEY=dev_secret_key
DEBUG=true
ALLOWED_HOSTS=localdev,127.0.0.1
TIME_ZONE=Europe/Helsinki
